<?xml version="1.0" encoding="utf-8"?>
<merge xmlns:android="http://schemas.android.com/apk/res/android"
       xmlns:tools="http://schemas.android.com/tools"
       android:layout_width="match_parent"
       android:layout_height="match_parent">
    <RelativeLayout
        android:id="@+id/webViewScreenTopBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue"

        >
        <ImageView
            android:id="@+id/webViewScreenBack"
            android:src="@drawable/next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:padding="5dp"
            android:rotation="180"
            android:background="@color/white"
            />

        <TextView
            android:id="@+id/webViewScreenTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/webViewScreenBack"
            android:layout_toEndOf="@id/webViewScreenBack"
            android:layout_centerVertical="true"
            android:textColor="@color/white"
            android:gravity="center"
            tools:text="blah "
            android:textStyle="bold|italic"/>
    </RelativeLayout>
    <WebView
        android:id="@+id/webViewScreenWebView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/webViewScreenTopBar"
        android:background="@color/black"
        />


</merge>